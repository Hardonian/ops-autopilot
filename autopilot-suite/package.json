{
  "name": "autopilot-suite",
  "version": "0.1.0",
  "description": "Meta-repo coordinating autopilot modules - shared contracts, jobforge adapters, profiles, and runnerless validation",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "clean": "pnpm -r clean",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "typescript": "^5.4.5"
  },
  "workspaces": [
    "packages/*",
    "apps/*"
  ]
}