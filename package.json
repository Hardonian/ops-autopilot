{
  "name": "@autopilot/ops-autopilot",
  "version": "0.1.0",
  "description": "Runnerless reliability autopilot - consumes events, detects infrastructure anomalies, produces diagnoses and JobForge requests",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./contracts": {
      "import": "./dist/contracts/index.js",
      "types": "./dist/contracts/index.d.ts"
    },
    "./jobforge": {
      "import": "./dist/jobforge/index.js",
      "types": "./dist/jobforge/index.d.ts"
    },
    "./profiles": {
      "import": "./dist/profiles/index.js",
      "types": "./dist/profiles/index.d.ts"
    }
  },
  "bin": {
    "ops-autopilot": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts src/contracts/index.ts src/jobforge/index.ts src/profiles/index.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/cli.ts --format esm --dts --watch",
    "lint": "eslint src --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx}\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"tests/**/*.{ts,tsx}\" \"*.md\"",
    "cli": "node ./dist/cli.js",
    "verify": "pnpm format:check && pnpm lint && pnpm typecheck && pnpm build && pnpm test",
    "verify:fast": "pnpm lint && pnpm typecheck && pnpm build",
    "verify:full": "pnpm verify:fast && pnpm test",
    "docs:verify": "pnpm build && node ./scripts/docs-verify.js",
    "contracts:compat": "pnpm build && node ./scripts/contracts-compat.js",
    "fixtures:export": "pnpm build && node ./scripts/fixtures-export.js"
  },
  "dependencies": {
    "@autopilot/contracts": "file:./autopilot-suite/packages/contracts",
    "@autopilot/jobforge-client": "file:./autopilot-suite/packages/jobforge-client",
    "@autopilot/profiles": "file:./autopilot-suite/packages/profiles",
    "commander": "^12.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.0",
    "vitest": "^2.1.8"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "keywords": [
    "autopilot",
    "ops",
    "reliability",
    "infrastructure",
    "monitoring",
    "alerts",
    "runbooks",
    "jobforge"
  ]
}
